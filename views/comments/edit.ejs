<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3 text-center">
            <h1 class="text-center mt-5 mb-4">Edit Comment</h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" class="form-inlin justify-content-center">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                </div>
                <button class="btn btn-lg btn-block btn-primary">Submit!!</button>
            </form>
            
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

